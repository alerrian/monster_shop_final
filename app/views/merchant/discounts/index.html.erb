<h2>Discounts</h2>
<%= link_to  "Add new Discount" %>

<% @discounts.each do |discount| %>
  <section id="discount-<%= discount.id %>">
    <p>Name: <%= discount.name %></p>
    <p>Items Required: <%= discount.item_threshold %></p>
    <p>Percentage Off: <%= discount.percentage_off %></p>
    <p>----------------------------------------------</p>
  </section>
<% end %>
